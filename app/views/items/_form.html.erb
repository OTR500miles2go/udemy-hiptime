<div class="container">
  <%= simple_form_for @item do |f| %>
    <%= f.input :title, label: "Item" %>
    <%= f.input :description %>
    <%= f.button :submit, :class=>'btn btn-primary' %>
  <% end %>
  <br>
  <button class="btn btn-outline-info" type="button">
    <%= link_to "Back", root_path %>
  </button>
</div>